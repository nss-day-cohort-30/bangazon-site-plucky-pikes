@model Bangazon.Models.OrderProduct

@{
    ViewData["Title"] = "Remove from Cart";
}

<h1>Remove from Cart</h1>

<h3>Are you sure you want to remove this product from your cart?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderProductId" />
        <input type="submit" value="Remove from Cart" class="btn btn-danger" /> |
        <a asp-controller="Orders" asp-action="ShoppingCart">Back to List</a>
    </form>
</div>
