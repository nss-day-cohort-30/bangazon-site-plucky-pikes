@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order @Html.DisplayFor(model => model.OrderId)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderProducts)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @if (Model.OrderProducts.Count() > 0)
                {
                    foreach (var item in Model.OrderProducts)
                    {
                        <li>@Html.DisplayFor(modelItem => item.Product.Title)</li>

                    }
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            <!-- code to calculate the sum of all product prices goes here -->
        </dd>
    </dl>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
